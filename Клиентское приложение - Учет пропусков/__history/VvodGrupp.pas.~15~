unit VvodGrupp;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Grids, DBGrids, ExtCtrls, jpeg, DBCtrls, StdCtrls, Buttons;

type
  TFVvodGrupp = class(TForm)
    DBGrid1: TDBGrid;
    Panel1: TPanel;
    Panel2: TPanel;
    Image1: TImage;
    Image4: TImage;
    Image5: TImage;
    Image2: TImage;
    Image3: TImage;
    Label1: TLabel;
    DBLookupComboBox1: TDBLookupComboBox;
    LabeledEdit1: TLabeledEdit;
    Label3: TLabel;
    DBLookupComboBox3: TDBLookupComboBox;
    BitBtn1: TBitBtn;
    LabeledEdit2: TLabeledEdit;
    procedure BitBtn1Click(Sender: TObject);
    procedure FormActivate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FVvodGrupp: TFVvodGrupp;

implementation

uses DM, FMenu, VvodDiscipl, VvodPrepod, VvodSpec, VvodStud;

{$R *.dfm}



procedure TFVvodGrupp.BitBtn1Click(Sender: TObject);
begin
FDM.ADOQueryVvodGrupp.Open;
FDM.ADOStoredProcVvodGrupp.Parameters.ParamByName('@N_Special').Value:=(DBLookupComboBox1.Text);
FDM.ADOStoredProcVvodGrupp.Parameters.ParamByName('@Kurs').Value:=StrToInt(LabeledEdit1.Text);
FDM.ADOStoredProcVVodGrupp.Parameters.ParamByName('Naim_Grupp').Value:=(DBLookupComboBox2.Text);
FDM.ADOStoredProcVVodGrupp.Parameters.ParamByName('Soc_ped').Value:=(DBLookupComboBox3.Text);

FDM.ADOStoredProcVVodGrupp.ExecProc;

FDM.ADOQueryVvodGrupp.Close;
FDM.ADOQueryVvodGrupp.Open;
ShowMessage('Новая группа добавлена')
end;

procedure TFVvodGrupp.FormActivate(Sender: TObject);
begin
FDM.ADOQueryVvodGrupp.Active:=True;
FDM.ADOQueryVvodGrupp.Open;
DBGrid1.Columns.Items[0].Title.Caption :='№ Специальности';
DBGrid1.Columns.Items[1].Title.Caption :='Курс';
DBGrid1.Columns.Items[2].Title.Caption :='Название группы';
DBGrid1.Columns.Items[3].Title.Caption :='Социальный педагог';
end;

end.
